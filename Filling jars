package fillingJars;

import java.util.*;

public class Solution {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int N = sc.nextInt();
		int M = sc.nextInt();
		long a, b, k;
		long sumContents = 0;
		for (int i = 0; i < M; i++) {
			a = sc.nextInt();
			b = sc.nextInt();
			k = sc.nextInt();
			sumContents += (k * (b - a + 1));
		}
		System.out.println(sumContents / N);
		sc.close();
	}
}
